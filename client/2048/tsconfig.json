{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "DOM"
    ],
    "module": "ES2015",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "outDir": "./temp/",
    "baseUrl": "./",
    "paths": {
      "cc": ["./node_modules/cc/index"],
      "cc/*": ["./node_modules/cc/*"]
    },
    "types": [
      "cc"
    ]
  },
  "include": [
    "assets/scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp/**/*"
  ]
}